{
  "extends": ["config:base"],
  "helmfile": {
    "fileMatch": ["^helm/helmfile.yaml$"]
  },
  "helm-values": {
    "fileMatch": ["^helm/config/.+/values.yaml$"]
  },
  "packageRules": [
    {
      "matchManagers": ["helmfile", "helm-values"],
      "enabled": true,
      "allowedVersions": "^v1.1.2"
    }
  ]
}
